UPDATE employees
SET first_name = '랄랄랄'
WHERE emp_no = 10001;

SELECT * FROM employees;


UPDATE employees
SET last_name = '흥',
hire_date = now(),
WHERE emp_no = 10001;


UPDATE departments 
SET dept_name = 'Tech Sales'
WHERE dept_name = 'Sales';



SELECT * FROM departments;

UPDATE employees
SET birth_date = '1977-07-07'
WHERE last_name = 'Erie';

SELECT * FROM employees;

SELECT * FROM employees
WHERE last_name = 'Erie';


DELETE  FROM employees
WHERE emp_no =10005;
