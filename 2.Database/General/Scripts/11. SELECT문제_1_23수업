-- -----------------------------------------------------
-- [select 문제 2번째]

-- 1
SELECT emp_no, first_name, last_name FROM employees
order BY emp_no ASC;

-- 2
SELECT emp_no, last_name  FROM employees
ORDER BY emp_no DESC;

-- 3
SELECT * FROM salaries
ORDER BY salary DESC;

-- 4
select * FROM employees
ORDER BY hire_date asc;

-- 5 
SELECT * FROM employees
GROUP BY gender, emp_no
ORDER BY gender ASC;

-- 6
SELECT max(salary) FROM salaries
ORDER BY salary DESC;

-- 7 
SELECT min(salary) FROM salaries
ORDER BY salary ASC;

-- 8 
SELECT AVG(salary) FROM salaries
ORDER BY salary;

-- 9 
SELECT sum(salary) FROM salaries
ORDER BY salary;

-- 10 @
SELECT count(emp_no) FROM employees;

-- 11 @
SELECT  gender,count(*) FROM employees
GROUP BY gender;
-- count(*) : 현재 그룹에 포함된 모든 행(row)의 수

-- 12
SELECT dept_no ,count(*) FROM dept_emp
GROUP BY dept_no;

-- 13
SELECT title, count(*)FROM titles
GROUP BY title;

-- 14
SELECT hire_date, count(*)FROM employees 
GROUP BY hire_date
ORDER BY hire_date DESC;

-- 15
SELECT hire_date, count(*) FROM employees
GROUP BY hire_date;

-- 16 @
SELECT gender, count(*) FROM employees
GROUP BY gender
HAVING count(*) >= 100000;

-- 17
SELECT dept_no,count(*) FROM dept_emp
GROUP BY dept_no 
HAVING count(*) >= 20000;

-- 18
select title,count(*) FROM titles
GROUP BY title 
HAVING count(*) >= 50000;

-- 19 
SELECT emp_no, salary FROM salaries
GROUP BY emp_no , salary  
HAVING sum(salary) >= 80000;

-- 20 @
SELECT YEAR(hire_date),count(*) FROM employees
GROUP BY YEAR(hire_date) 
HAVING count(*) >= 10000;























SELECT * FROM salaries;
SELECT * FROM employees;
SELECT * FROM dept_emp;